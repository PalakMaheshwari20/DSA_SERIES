#include <iostream>

using namespace std;

int main()
{
    int a,b,op;
    cout<<"Enter a number: ";
    cin>>a;
    cout<<"Enter a number: ";
    cin>>b;
    
    cout<<"Choose the operator: \n1.ADD \n2.SUBTRACT \n3.MULTIP[LY \n4.DIVIDE \n5.MODULO"<<endl;
    cin>>op;
    
    switch(op){
        case 1: cout<<"OUTPUT: "<<(a+b)<<endl;
                break;
        case 2: cout<<"OUTPUT: "<<(a-b)<<endl;
                break;
        case 3: cout<<"OUTPUT: "<<(a*b)<<endl;
                break;
        case 4: cout<<"OUTPUT: "<<(a/b)<<endl;
                break;        
        case 5: cout<<"OUTPUT: "<<(a%b)<<endl;
                break;
        default: cout<<"Enter valid input\nThank you!!"<<endl;
    }

    return 0;
}


/*OUTPUT

Enter a number: 12
Enter a number: 34
Choose the operator: 
1.ADD 
2.SUBTRACT 
3.MULTIP[LY 
4.DIVIDE 
5.MODULO
5
OUTPUT: 12

*/
