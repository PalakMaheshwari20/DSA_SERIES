/*WAP to calculate for the given amount how many Rs.100, Rs.50 and Rs.20 notes are required*/

#include <iostream>

using namespace std;

int main()
{
    int amt;
    cout<<"Enter the amount: ";
    cin>>amt;
    int b,c;
    int a = amt;
    switch(1){
        case 1: a = a/100;
                cout<<"NUMBER OF Rs.100 Note required: "<<a<<endl;
        
        case 2: b = (amt-(a*100))/50;
                cout<<"NUMBER OF Rs.50 Note required: "<<b<<endl;
        
        case 3: c = (amt-(a*100)-(b*50))/20;
                cout<<"NUMBER OF Rs.20 Note required: "<<c<<endl;
    }
    return 0;
}


/*OUTPUT

Enter the amount: 1380
NUMBER OF Rs.100 Note required: 13
NUMBER OF Rs.50 Note required: 1
NUMBER OF Rs.20 Note required: 1

*/
