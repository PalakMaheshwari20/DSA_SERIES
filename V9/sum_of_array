/*WAP to find the sum of all the numbers in an array*/

#include <iostream>

using namespace std;

int cal_sum(int arr[], int size)
{
    int sum =0;
    for(int i=0;i<size;i++)
    {
        sum +=arr[i];
    }
    return sum;    
}


int main ()
{
    int n;
    cout<<"Enter the size :";
    cin>>n;
    int arr[50];
    cout<<"Enter elements : ";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<"Sum of elements : "<<cal_sum(arr,n)<<endl;
   return 0;
}

/*OUTPUT

Enter the size :3
Enter elements : 10
5
2
Sum of elements : 17

*/
